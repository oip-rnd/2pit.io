  var <?php echo $propertyId ?> = $('#search-<?php echo $propertyId ?>').val();
  if (<?php echo $propertyId ?>.length >= 2) { params += '<?php echo $propertyId ?>=' + <?php echo $propertyId ?> + '&'; todo = false; }

